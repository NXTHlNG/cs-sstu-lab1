@model InputViewModel
@{
    ViewData["Title"] = "InputPage";
}

<main>
    @{Html.BeginForm("Index", "Input", FormMethod.Post, new { @class = "login-form" });}
    <div class="form-group">
        @Html.LabelFor(m => m.Text)
        @Html.TextBoxFor(m => m.Text, new { @class = "form-control", })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Values)
        @Html.ListBoxFor(m => m.Values, new MultiSelectList(new string[] { "Sting1", "String2", "String3", "String4" }),
            new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Values1)
        @Html.DropDownListFor(m => m.Values1, new SelectList(new string[] { "Sting1", "String2", "String3", "String4" }),
            new { @class = "form-control" })
    </div>
    <div class="form-check">
        @Html.RadioButtonFor(m => m.Option, "Option1",
            new { @class = "form-check-input", id = "Option1" })
        <label class="form-check-label" for="Option1">Option1</label>

    </div>
    <div class="form-check">
        @Html.RadioButtonFor(m => m.Option, "Option2",
            new { @class = "form-check-input", id = "Option2" })
        <label class="form-check-label" for="Option2">Option2</label>

    </div>
    <div class="form-check">
        @Html.RadioButtonFor(m => m.Option, "Option3",
            new { @class = "form-check-input", id = "Option3" })
        <label class="form-check-label" for="Option3">Option3</label>

    </div>
    <input type="submit" value="Submit" class="btn btn-primary" />
    @{Html.EndForm();}

    @{
        if (Context.Request.Method == "POST")
        {
            <p>@Html.LabelFor(m => m.Text) : @Html.DisplayFor(m => m.Text)</p>
            <p>@Html.LabelFor(m => m.Values) : @Html.DisplayFor(m => m.Values)</p>
            <p>@Html.LabelFor(m => m.Values1) : @Html.DisplayFor(m => m.Values1)</p>
            <p>@Html.LabelFor(m => m.Option) : @Html.DisplayFor(m => m.Option)</p>
            
        }
    }


</main>